{
    "name": "victormonserrat/donut",
    "type": "project",
    "description": "A to do (not) list example DDD application.",
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "prooph/event-sourcing": "^5.6",
        "ramsey/uuid": "^3.8",
        "symfony/console": "4.3.*",
        "symfony/dotenv": "4.3.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "4.3.*",
        "symfony/messenger": "4.3.*",
        "symfony/yaml": "4.3.*"
    },
    "require-dev": {
        "behat/behat": "^3.5",
        "friends-of-behat/symfony-extension": "^2.0",
        "fzaninotto/faker": "^1.8",
        "phpspec/phpspec": "^5.1",
        "sylius-labs/coding-standard": "^3.0",
        "symfony/debug-pack": "^1.0",
        "symfony/maker-bundle": "^1.12",
        "symfony/web-server-bundle": "4.3.*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Donut\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Donut\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "behat": [
            "@behat:application",
            "@behat:infrastructure"
        ],
        "behat:application": "vendor/bin/behat --colors -s application",
        "behat:infrastructure": "vendor/bin/behat --colors -s infrastructure",
        "cs:check": "vendor/bin/ecs check src spec tests --ansi",
        "cs:fix": "vendor/bin/ecs check src spec tests --fix --ansi",
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "spec": "vendor/bin/phpspec run --ansi",
        "test": [
            "@behat",
            "@spec"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
